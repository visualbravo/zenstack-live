{
  "name": "@visualbravo/zenstack-live",
  "private": true,
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "@zenstack-live/source": "./src/index.ts",
      "default": "./dist/index.mjs"
    },
    "./discriminator": {
      "@zenstack-live/source": "./src/discriminator.ts",
      "default": "./dist/discriminator.mjs"
    },
    "./internal": {
      "@zenstack-live/source": "./src/internal.ts",
      "default": "./dist/internal.mjs"
    },
    "./query-compiler": {
      "@zenstack-live/source": "./src/query-compiler.ts",
      "default": "./dist/query-compiler.mjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./discriminator": "./dist/discriminator.mjs",
      "./internal": "./dist/internal.mjs",
      "./query-compiler": "./dist/query-compiler.mjs",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format:fix": "oxfmt",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@zenstackhq/orm": "3.2.0",
    "@zenstackhq/schema": "3.2.0",
    "decimal.js": "10.6.0",
    "ioredis": "5.9.1",
    "kysely": "0.28.9",
    "lossless-json": "4.3.0",
    "pg": "8.16.3",
    "stable-hash": "0.0.6",
    "superjson": "2.2.6",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@types/pg": "8.16.0",
    "@zenstack-live/config": "workspace:*"
  },
  "packageManager": "bun@1.3.5"
}
