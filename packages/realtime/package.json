{
  "name": "@newproject/realtime",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format:fix": "oxfmt",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@socket.io/admin-ui": "0.5.1",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "@newproject/database": "workspace:*"
  },
  "devDependencies": {
    "@newproject/config": "workspace:*",
    "@newproject/env": "workspace:*"
  },
  "packageManager": "bun@1.3.5",
  "exports": {
    "./client": {
      "@newproject/source": "./src/client.ts",
      "default": "./dist/client.mjs"
    },
    "./server": {
      "@newproject/source": "./src/server.ts",
      "default": "./dist/server.mjs"
    },
    "./types": {
      "@newproject/source": "./src/types.ts",
      "default": "./dist/types.mjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      "./client": "./dist/client.mjs",
      "./server": "./dist/server.mjs",
      "./types": "./dist/types.mjs",
      "./package.json": "./package.json"
    }
  }
}
