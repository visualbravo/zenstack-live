{
  "name": "@newproject/billing",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format:fix": "oxfmt",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@newproject/env": "workspace:*",
    "@stripe/stripe-js": "8.5.3",
    "stripe": "20.0.0"
  },
  "devDependencies": {
    "@newproject/config": "workspace:*"
  },
  "packageManager": "bun@1.3.5",
  "exports": {
    "./client": {
      "@newproject/source": "./src/client.ts",
      "default": "./dist/client.mjs"
    },
    "./server": {
      "@newproject/source": "./src/server.ts",
      "default": "./dist/server.mjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      "./client": "./dist/client.mjs",
      "./server": "./dist/server.mjs",
      "./package.json": "./package.json"
    }
  }
}
